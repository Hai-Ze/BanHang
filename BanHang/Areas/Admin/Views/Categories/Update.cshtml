@model BanHang.Models.Category

@{
    ViewData["Title"] = "Cập nhật danh mục";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary">
                <i class="fas fa-edit"></i> Cập nhật danh mục
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Categories" asp-action="Index">Quản lý danh mục</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Categories" asp-action="Display" asp-route-id="@Model.Id">@Model.Name</a>
                    </li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </nav>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-edit"></i> Thông tin danh mục</h5>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Categories" asp-action="Update" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="fas fa-tag text-primary"></i> Tên danh mục *
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục..."
                                   maxlength="50" required />
                            <div class="form-text">Tối đa 50 ký tự</div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Cập nhật danh mục
                            </button>
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Display" asp-route-id="@Model.Id" class="btn btn-info btn-lg">
                                <i class="fas fa-eye"></i> Xem chi tiết
                            </a>
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0"><i class="fas fa-history"></i> Thông tin hiện tại</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><strong>ID:</strong> <code>@Model.Id</code></li>
                        <li class="mb-2"><strong>Tên hiện tại:</strong> @Model.Name</li>
                        <li class="mb-0">
                            <strong>Số sản phẩm:</strong>
                            @if (Model.Products != null && Model.Products.Any())
                            {
                                <span class="badge bg-success">@Model.Products.Count sản phẩm</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">0 sản phẩm</span>
                            }
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card mt-3 border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-exclamation-circle"></i> Lưu ý</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0 small">
                        <li class="mb-2">
                            <i class="fas fa-info-circle text-info"></i>
                            Thay đổi tên danh mục sẽ ảnh hưởng đến tất cả sản phẩm
                        </li>
                        <li class="mb-0">
                            <i class="fas fa-shield-alt text-success"></i>
                            Dữ liệu sản phẩm sẽ được giữ nguyên
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }
</style>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}