@model BanHang.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-12">
            <h2 class="text-primary">
                <i class="fas fa-eye"></i> Chi tiết sản phẩm
            </h2>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <!-- Hình ảnh -->
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name"
                             class="img-fluid rounded"
                             style="max-height: 300px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-light rounded p-5">
                            <i class="fas fa-image fa-3x text-muted"></i>
                            <p class="text-muted mt-2">Chưa có hình ảnh</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <!-- Thông tin -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@Model.Name</h4>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td width="30%"><strong>Giá bán:</strong></td>
                            <td>
                                <span class="badge bg-success fs-6">
                                    @Model.Price.ToString("N0") đô
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Danh mục:</strong></td>
                            <td>
                                @if (Model.Category != null)
                                {
                                    <span class="badge bg-primary">@Model.Category.Name</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Chưa phân loại</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Mô tả:</strong></td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    @Model.Description
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có mô tả</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>ID:</strong></td>
                            <td><code>@Model.Id</code></td>
                        </tr>
                    </table>
                </div>
                <div class="card-footer">
                    <!-- Nút thao tác -->
                    <div class="d-flex gap-2">
                        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .table td {
        padding: 0.75rem 0.5rem;
        vertical-align: middle;
    }
</style>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
}